#include <stdarg.h>
#include <stdlib.h>
#include <unistd.h>

int _putchar(char c) {
    return write(1, &c, 1);
}

int _printf(const char *format, ...) {
    int count = 0;
    va_list args;
    va_start(args, format);

    for (int i = 0; format[i]; i++) {
        if (format[i] != '%') {
            _putchar(format[i]);
            count++;
        }
        else {
            i++; // increment to character after '%'
            switch (format[i]) {
                case 'c': { 
                    char c = va_arg(args, int); // char arguments are promoted to int in ...
                    _putchar(c);
                    count++;
                    break;
                }
                case 's': {
                    char *str = va_arg(args, char *);
                    for (int j = 0; str[j]; j++) {
                        _putchar(str[j]);
                        count++;
                    }
                    break;
                }
                case '%':
                    _putchar('%');
                    count++;
                    break;
                default:
                    // for any unrecognized pattern
                    _putchar('%');
                    _putchar(format[i]);
                    count += 2;
            }
        }
    }

    va_end(args); // cleanup
    return count;
}
